# ===========================================
# Pinspire Backend Environment Configuration
# ===========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Local: mongodb://localhost:27017/pinspire
# Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/pinspire?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/pinspire

# JWT Configuration
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d

# CORS Configuration (comma separated for multiple origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
